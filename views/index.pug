extends layouts/layout

block content
  .ui.relaxed.divided.items
    each data in yelpData.businesses
      - var visiting = false

      //- Check if user is visiting the current Yelp business.
      if visitingPlaces
        each place in visitingPlaces
          if place == data.id
            - visiting = true

      .item
        if data.image_url
          .ui.small.image
            img(src= data.image_url)
        .content
          a.header(href= data.url, target="_blank")= data.name
          .meta
            each category in data.categories
              = category
          .extra
            img(src= data.rating_img_url)
          .extra
             = data.phone
          if data.is_closed
            .ui.label Closed
          else
            .ui.label Opened
          if loggedIn
            if visiting
              button.miny.ui.button.visiting(data-yelp-id= data.id) Going yes
            else
              button.miny.ui.button.visiting(data-yelp-id= data.id) Going
block script
  script(src='/javascript/visiting.js')
